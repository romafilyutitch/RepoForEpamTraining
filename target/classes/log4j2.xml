<?xml version = "1.0" encoding = "UTF-8" ?>
<Configureation>
    <Appenders >
       <File name = "MainFile" fileName = "logs/mainLog.log" append = "false">
        <PatternLayout pattern = "%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
       </File>
        <File name = "ConnectionPoolAppender" fileName = "logs/ConnectionPoolLog.log" append = "false">
            <PatternLayout pattern = "%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
        </File>
    </Appenders>


   <Loggers>
       <Logger name = "com.epam.jwd.final_task.app.Main" additivity = "false" level = "All">
           <AppenderRef ref = "MainFile"/>
       </Logger>
       <Logger name = "com.epam.jwd.final_task.connectionPool" additivity = "false" level = "All">
           <AppenderRef ref = "ConnectionPoolAppender"/>
       </Logger>
   </Loggers>
</Configureation>